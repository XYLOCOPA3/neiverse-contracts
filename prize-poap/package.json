{
  "name": "hardhat-project",
  "scripts": {
    "compile": "npm run cpy && npx hardhat compile",
    "test": "npm run cpy && REPORT_GAS=true npx hardhat test",
    "node": "npx hardhat node",
    "predeploy": "npm run test",
    "deploy": "npx hardhat run scripts/deploy.ts --network $npm_config_network",
    "verify": "npx hardhat verify $npm_config_contractaddress --network $npm_config_network --constructor-args argument.ts",
    "cpy-community-passport": "cd ../community-passport && cp -rf contracts/ICommunityPassport.sol ../prize-poap/contracts/Interface/ICommunityPassport.sol",
    "cpy-community-portal": "cd ../community-portal && cp -rf contracts/ICommunityPortal.sol ../prize-poap/contracts/Interface/",
    "cpy-quest-board": "cd ../quest-board && cp -rf contracts/IQuestBoard.sol ../prize-poap/contracts/Interface/",
    "cpy": "rm -rf ./contracts/Interface && mkdir ./contracts/Interface && npm run cpy-community-passport && npm run cpy-community-portal && npm run cpy-quest-board"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "hardhat": "^2.13.0",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.2",
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "erc5192": "^0.0.1"
  }
}
